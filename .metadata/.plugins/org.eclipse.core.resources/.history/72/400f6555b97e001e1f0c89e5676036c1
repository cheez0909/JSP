<script>
window.onload = function() {
	let logoutBtn = document.querySelector("#logout_button");
	let loginBtn = document.querySelector("#login_button");
	logoutBtn.onclick = function(){
		alert("로그아웃합니다.");
		LoginForm.action = "/LogoutController";
		LoginForm.submit();
	};
	
	loginBtn.addEventListener('click', function(event){
		alert("로그인합니다")
		LoginForm.action = "Login.jsp";
		LoginForm.submit();
	});
	
}
</script>
</head>
<body>
<!-- 로그인 / 로그아웃 링크 보여주기
	세션에 user_id가 null이 아니라면 로그아웃 버튼
	null이면 로그인
 -->
<form name="LoginForm">
<%

	memberDTO dto = (memberDTO) session.getAttribute("dto");
	if(dto!=null){ %>
		<%=dto.getName() %> 님 환영합니다
		<button type="button" class="btn btn-primary" id="logout_button" style="user-select: auto;">로그아웃 하기</button>
	<%} else {%>
		<button type="button" class="btn btn-primary" id="login_button" style="user-select: auto;">로그인 하기</button>
	<%} %>
</form>	
	
	<h1>게시판</h1>
	<table>
		<tr>
			<td>일련번호</td>
			<td>제목</td>
			<td>내용</td>
			<td>작성자</td>
			<td>작성일</td>
			<td>조회수</td>
		</tr>
	
<%
	if(request.getAttribute("boarddto")!=null){
		List<BoardDTO> dtos = ( List<BoardDTO> ) request.getAttribute("boarddto");
		for(BoardDTO num : dtos){%>
			<tr>
				<td><%=num.getNum() %></td>
				<td><%=num.getTitle() %></td>
				<td><%=num.getContent() %></td>
				<td><%=num.getId() %></td>
				<td><%=num.getPostdate() %></td>
				<td><%=num.getVisitcount() %></td>
			</tr>
	
<%} 
}%>
</table>
